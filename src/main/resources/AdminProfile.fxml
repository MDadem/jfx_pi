<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane fx:id="profileRoot"
            prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AdminProfileController"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 2, 2);">
            <Label text="Admin Profile"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI', sans-serif;">
                <font>
                    <Font name="Segoe UI Bold" size="32.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <content>
                <StackPane alignment="CENTER" style="-fx-padding: 30;">
                    <VBox spacing="30.0"
                          maxWidth="600"
                          style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 5, 5);">
                        <HBox alignment="CENTER">
                            <StackPane>
                                <Circle radius="60.0" fill="#e0e0e0" />
                                <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                                    <clip>
                                        <Circle radius="60.0" centerX="60.0" centerY="60.0" />
                                    </clip>
                                </ImageView>
                            </StackPane>
                        </HBox>

                        <!-- First Name -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Label text="First Name:" styleClass="profile-label" />
                            <TextField fx:id="firstNameField" styleClass="profile-text-field" prefWidth="300.0" />
                        </HBox>

                        <!-- Last Name -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Label text="Last Name:" styleClass="profile-label" />
                            <TextField fx:id="lastNameField" styleClass="profile-text-field" prefWidth="300.0" />
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Label text="Email:" styleClass="profile-label" />
                            <TextField fx:id="emailField" styleClass="profile-text-field" prefWidth="300.0" />
                        </HBox>

                        <!-- Password -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Label text="Password:" styleClass="profile-label" />
                            <TextField fx:id="passwordField" styleClass="profile-text-field" prefWidth="300.0" promptText="••••••••" />
                        </HBox>

                        <!-- Confirm Password -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Label text="Confirm Password:" styleClass="profile-label" />
                            <TextField fx:id="confirmPasswordField" styleClass="profile-text-field" prefWidth="300.0" promptText="••••••••" />
                        </HBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <Button onAction="#saveProfileChanges" text="Save Changes" styleClass="save-button" />
                            <Button fx:id="cancelButton" onAction="#cancelChanges" text="Back to Users" styleClass="cancel-button" />
                        </HBox>
                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>

    <stylesheets>
        <URL value="@/css/styles.css" />
        <URL value="@/css/profile.css" />
    </stylesheets>
</BorderPane>
